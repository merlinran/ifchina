.panel
  .article
    {% if article.featured %}
    %a.featured(href='/featured')
    {% endif %}
    %a(href='/articles/{{ article._permalink }}')
      %h1 {{ article.title }}
    {{ article.photo.url | image_tag: 'class:thumbnail' }}
    %p {{ article.text }}
    %a(href="/projects/{{article.project._permalink}}") {{ article.project.name }}
