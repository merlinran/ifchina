%header.page-header
  .container
    .row
      .col-md-8
        %h1
          %a(href='/') 青原色创新实验室
          %small 用影像讲述身边的故事
      .col-md-4
    .row
      .col-md-8
      .col-md-4
        %ul.nav.navbar-nav
          {% for cat in contents.projects.group_by_category %}
          %li.dropdown
            %a.dropdown-toggle(data-toggle='dropdown' href='#')
              {{cat.name}}
              %b.caret
              %ul.dropdown-menu
                {% for project in cat.entries %}
                %li
                  %a(href='/projects/{{project._permalink}}') {{ project.name }}
                {% endfor %}
          {% endfor %}
